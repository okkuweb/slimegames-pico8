__lua__
-- slimegames
-- pico-8 edition

function _init ()
	cls()
	--< player 1 >--
	p1xinit = 20
	p1yinit = 80
	-- movement
	p1x = 20
	p1y = 80
	p1speed = 4
	-- jumping
	p1jgravityinit = 0.2
	p1jspeedinit = 3
	p1jgravity = p1jgravityinit
	p1jspeed = p1jspeedinit
	p1jump = false
	--< player 2 >--
	
	-- tests
	kek = 0
end

function _update60()
	--< player 1 position change >--
	if btn(1,1) then
		p1x += 1
	end
	if btn(0,1) then
		p1x -= 1
	end
	
	-- jump
	if btn(2,1) and not p1jump then
		jump()
	end
	if p1y < p1yinit then
		p1jspeed -= p1jgravity
		jump()
	else
		p1jump = false
		p1jspeed = p1jspeedinit
		p1jgravity = p1jgravityinit
	end
	
	--< update tests >--
	kek += 1
end

function jump()
	p1jump = true
	p1y -= p1jspeed
end

function _draw()
 cls()
 map(0,0)
 sspr(0,8,16,16,p1x,p1y)
end

